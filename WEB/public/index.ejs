<head>

<body>

	<!-- Menu -->
	<header id=" header">
		<nav class="menu ">
			<div class="logo-box">
				<img src="/logo/final.png">
	
				<span class="btn-menu"><i class="fas fa-bars"></i></span>
			</div>
			<div class="seach">
				<form action="/seach" method="GET" >
				<input type="text" name="search" placeholder="chercher" class="src" autocomplete="off">
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			</form>
			</div>
	
			<div class="list-container">
				<ul class="lists">
					<li><a href="/" class="active">Home</a></li>
					<li><a href="help">Help</a></li>
					<li><a href="contact">Contact</a></li>
					<li><a class="icon icon-user1" href="/user">  <%= name %> </a></li>
					<li><a href="/logout">Logout</a></li>

				</ul>
			</div>
	
		</nav>
		</header>
	<!-- Header -->
	<div class="img-header">
		<div class="welcome">

			<div class="widget">
				<div class="date">
					<script>
						(function () {
							var date = new Date();
							document.write(date.toDateString());
						}())
					</script>
				</div>
			</div>

			<h1>Help us explore the world </h1>
			<form action="/add" method="GET">
				<input type="submit" value="Add new +"></input>
			</form>
			
		</div>
	</div>
	</body>
	</header>
	<main>

		<!--Description-->
		<section class="acerca-de">
			<div class="info">
				<h1> The traveling community is a new expirence</h1>
				<p>Here you will find experiences of travelers like you who have found a fascinating place in the world.</p>
				<p>Surely you also want to share your experience, if so tell us. Click on the button "A new Place ? "button and add your travel experience.</p>

			</div>
			<button class="open-button" onclick="openForm()"><i class="fas fa-comments"></i></button>
			<div class="chat-popup" id="myForm">
				<form action="" class="from-container">
					<h2>We can help you </h2>
					<p> Messages </p>
					<div id="output"></div>
					<input class="msg-text" id="msg" required placeholder="Enter Your Msg"></input>
					<input type="text" id="username" required placeholder="Nickname"></input>
					<button id="send" type="submit" class="btn">submit</button>
					<button class="btn cancel" onclick="closeForm()">close</button>
				</form>
			</div>

			</div>
		</section>

	</main>
	<section class="projects">
	<div class="container">
		<% for(var i=0; i < data.length; i++) { %>
		<div class="card">
			<form action="/" method="get">
				<img src="<%= data[i].path%>">
				<h4><%= data[i].title%></h4>
				<p><%= data[i].description%></p>
				<p>Create by : <%= data[i].autor%></p>
				<a href="#"><%= format(data[i].create_at)%></a>
			</form>
			<a href="/plus/<%= data[i].id %>">
				<button type="submit">
					<i class="fas fa-plus"></i>
				</button></a>
		</div> 
		<% } %>
	</div>
</section>


	<!--scripts-->
	<script>
	function openForm(){
		document.getElementById("myForm").style.display="block";
	}
	function closeForm(){
		document.getElementById("myFrom").style.display="none";
	}
	</script>

